<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".About">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_about_photo"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="45dp"
        android:rotation="270"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tv_about_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Mochamad Ghifari 'Azmi"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="18dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_about_ttl"
        tools:text="Kebumen, 30 September 1997"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_about_email"
        tools:text="ghifariazmi@gmail.com"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="italic"/>

</LinearLayout>